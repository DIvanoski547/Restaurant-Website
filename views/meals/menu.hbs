<div class="bg-concrete-m-u">
  <div class="container py-3">
    <h2 class="text-center">MENU</h2>
    <div class="row row-cols-1 row-cols-md-3">
      {{#each allMeals}}
        <div class="col mb-3">
          <div class="card h-100">
            <img
              src={{mealImage}}
              class="card-img-top img-card-fix"
              alt="meal-image"
            />
            {{!-- <i class="fas fa-heart favorite-icon"></i> --}}
            <div class="card-body">
              <h5 class="card-title text-center">{{name}}</h5>
              <p class="card-text">
                <ul>
                  <li><span class="fw-bold">Ingredients:
                    </span>{{ingredients}}</li>
                  <li><span class="fw-bold">Allergens: </span>{{allergens}}</li>
                  <li><span class="fw-bold">Spice level: </span>
                    {{spiceLevel}}</li>
                  <li><span class="fw-bold">Category: </span>{{category}}</li>
                  <li><span class="fw-bold">Cuisine: </span>{{cuisine}}</li>
                  <li><span class="fw-bold">Dish Type: </span>{{dishType}}</li>
                </ul>
              </p>
            </div>
            <div class="card-footer">
              <div class="d-grid gap-2 text-center mx-auto">

                <a href="/menu/meal/{{_id}}" class="text-light u-0">
                  <button class="btn btn-secondary px-5" type="button">View
                  </button>
                </a>
                {{! <button
                class="btn btn-outline-primary btn-favorite"
                onclick="toggleFavorite(this)"
              ><i class="far fa-heart"></i></button> }}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>