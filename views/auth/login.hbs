<div class="container">
  <div
    id="login-form"
    class="position-absolute top-50 start-50 translate-middle card p-5 bg-light"
  >
    <form action="/login" method="POST" class="mb-0">
      <h3 class="text-center">Sign in</h3>
      {{! EMAIL FORM }}
      <div class="row g-3 align-items-center mb-3">
        <div class="col-3">
          <label for="inputemail" class="">Email </label>
        </div>
        <div class="col-auto">
          <input
            type="email"
            name="email"
            id="inputemail"
            class="form-control"
            aria-describedby="passwordHelpInline"
            placeholder="dave@chappelle.com"
          />
        </div>
      </div>

      {{! PASSWORD FORM  }}
      <div class="row g-3 align-items-center mb-3">
        <div class="col-3">
          <label for="inputPassword6" class="col-form-label">Password</label>
        </div>
        <div class="col-auto">
          <input
            type="password"
            name="password"
            id="inputPassword6"
            class="form-control"
            aria-describedby="passwordHelpInline"
            placeholder="********"
          />
        </div>

      </div>

      <div class="text-center">
        <button class="btn btn-secondary btn-block" type="submit">Sign In</button>
      </div>

      {{#if errorMessage}}
        <p style="color: red;" class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>

</div>